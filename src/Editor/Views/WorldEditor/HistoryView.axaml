<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
			 xmlns:model="using:Editor.ViewModels.WorldEditor"
			 x:DataType="model:HistoryViewModel"
             x:Class="Editor.Views.WorldEditor.HistoryView">
	<ScrollViewer Padding="5" Margin="5">
		<StackPanel>
			<StackPanel Spacing="5">
				<ItemsControl ItemsSource="{Binding RedoList}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" HorizontalAlignment="Left">
								<PathIcon Data="{StaticResource arrow_redo_regular}" Height="10" Width="10" />
								<Label Content="{Binding Name}" FontSize="12"/>
							</StackPanel>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
			<StackPanel Spacing="5">
				<ItemsControl ItemsSource="{Binding UndoList}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" HorizontalAlignment="Left">
								<PathIcon Data="{StaticResource arrow_undo_regular}" Height="10" Width="10" />
								<Label Content="{Binding Name}" FontSize="12"/>
							</StackPanel>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</StackPanel>
	</ScrollViewer>
</UserControl>