<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="TabItem">
		<Setter Property="FontSize" Value="12"/>
	</Style>

	<Style Selector="Menu MenuItem">
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="Padding" Value="10 0"/>
	</Style>

	<Style Selector="TreeViewItem:empty /template/ Panel#PART_ExpandCollapseChevronContainer">
		<Setter Property="Width" Value="0"/>
	</Style>
	<Style Selector="TreeViewItem /template/ Panel#PART_ExpandCollapseChevronContainer">
		<Setter Property="Width" Value="0"/>
		<Setter Property="Margin" Value="0"/>
	</Style>

	<Style Selector="DataGrid /template/ DataGridColumnHeadersPresenter#PART_ColumnHeadersPresenter">
		<Setter Property="Height" Value="20"/>
	</Style>
	<Style Selector="DataGridColumnHeader">
		<Setter Property="MinHeight" Value="0"/>
	</Style>
	<Style Selector="DataGridRow /template/ DataGridCellsPresenter#PART_CellsPresenter">
		<Setter Property="Height" Value="20"/>
	</Style>

</Styles>